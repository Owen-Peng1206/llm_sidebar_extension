{
  "type": "module",
  "name": "llm-sidebar",
  "version": "1.0.0",
  "description": "Chrome sidebar that lets you summarise, translate any page with a LLM provider of your choice.",
  "main": "dist/background.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext .ts,.js --quiet",
