    "sidebar",
    "openai",
    "anthropic"
  ],
  "author": "Owen Peng",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/chrome": "^0.0.229",
    "@types/node": "^24.7.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  }
}
