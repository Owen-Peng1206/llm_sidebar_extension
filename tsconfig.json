{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "chrome"          
    ]
  },
  "include": ["src/**/*.mts", "vite.config.mts"],
  "exclude": ["node_modules", "dist"]
}
